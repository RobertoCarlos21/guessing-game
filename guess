ecret_code=0
guess_count=0
guess_limit=4
while guess_count < guess_limit:
    guess= (int(input("Guess: ")))
    guess_count= guess_count + 1
    if guess == secret_code:
        print("Good job!")
        break
else:
    print("Better luck next time")
print("You have", guess_limit - guess_count, "Tries")
